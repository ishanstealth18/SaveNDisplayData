<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayDataActivity">

    <TextView
        android:id="@+id/display_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:contentDescription="display_name_content"
        android:text="Name: "
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/display_input_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:contentDescription="display_input_name_content"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintBaseline_toBaselineOf="@+id/display_name_title"
        app:layout_constraintStart_toEndOf="@+id/display_name_title"
        tools:text="Input Name"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/display_address_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:contentDescription="display_address_content"
        android:text="Address: "
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/display_name_title"
        app:layout_constraintTop_toBottomOf="@+id/display_name_title"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/display_input_address_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="display_address_content"
        android:ems="10"
        android:textSize="18sp"
        android:gravity="start|top"
        android:hint="Input Address"
        android:inputType="text"
        android:visibility="visible"
        app:layout_constraintBaseline_toBaselineOf="@+id/display_address_title"
        app:layout_constraintStart_toStartOf="@+id/display_input_name"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/display_phone_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:contentDescription="display_phone_title_content"
        android:text="Phone: "
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/display_address_title"
        app:layout_constraintTop_toBottomOf="@+id/display_address_title"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/editTextPhone2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="18sp"
        android:hint="Input Phone"
        android:inputType="phone"
        app:layout_constraintBaseline_toBaselineOf="@+id/display_phone_title"
        app:layout_constraintStart_toStartOf="@+id/display_input_address_title" />

    <TextView
        android:id="@+id/display_email_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:contentDescription="display_email_content"
        android:text="E-mail: "
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/display_phone_title"
        app:layout_constraintTop_toBottomOf="@+id/display_phone_title"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/display_input_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="display_email_content"
        android:ems="10"
        android:textSize="18sp"
        android:hint="Input Email"
        android:inputType="textEmailAddress"
        android:visibility="visible"
        app:layout_constraintBaseline_toBaselineOf="@+id/display_email_title"
        app:layout_constraintStart_toStartOf="@+id/editTextPhone2"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>